{
  "name": "poly-early-bot",
  "version": "1.0.0",
  "description": "Early detection bot for Polymarket opportunities",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest src/__tests__/unit",
    "test:integration": "jest src/__tests__/integration",
    "backtest": "ts-node src/cli/backtesting.ts",
    "test-stats": "ts-node src/cli/statistical-testing.ts",
    "config": "ts-node src/cli/config-cli-simple.ts",
    "config:show": "ts-node src/cli/config-cli-simple.ts show",
    "config:set": "ts-node src/cli/config-cli-simple.ts set",
    "config:preset": "ts-node src/cli/config-cli-simple.ts preset",
    "config:validate": "ts-node src/cli/config-cli-simple.ts validate",
    "dashboard": "ts-node src/cli/dashboard.ts"
  },
  "keywords": [
    "polymarket",
    "bot",
    "early",
    "detection"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "inquirer": "^9.3.8",
    "node-fetch": "^2.7.0",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.6",
    "uuid": "^13.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.6",
    "@types/node-fetch": "^2.6.9",
    "@types/pg": "^8.10.9",
    "@types/redis": "^4.0.10",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.9",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
