# Polymarket API Configuration
CLOB_API_URL=https://clob.polymarket.com
GAMMA_API_URL=https://gamma-api.polymarket.com

# Discord Webhook (optional - leave empty to disable Discord alerts)
DISCORD_WEBHOOK_URL=
DISCORD_RICH_EMBEDS=true
DISCORD_RATE_LIMIT=10

# Bot Configuration
CHECK_INTERVAL_MS=30000
MIN_VOLUME_THRESHOLD=10000
MAX_MARKETS_TO_TRACK=100

# Logging
LOG_LEVEL=info

# Microstructure Detection Thresholds
ORDERBOOK_IMBALANCE_THRESHOLD=0.3
SPREAD_ANOMALY_THRESHOLD=2.0
LIQUIDITY_SHIFT_THRESHOLD=20
MOMENTUM_THRESHOLD=5
TICK_BUFFER_SIZE=1000

# Database Configuration
# Options: postgresql, sqlite, memory
DATABASE_PROVIDER=sqlite

# PostgreSQL Configuration (if using postgresql)
DATABASE_URL=postgresql://user:password@localhost:5432/polymarket
DB_HOST=localhost
DB_PORT=5432
DB_NAME=polymarket
DB_USER=postgres
DB_PASSWORD=

# SQLite Configuration (if using sqlite)
SQLITE_PATH=./data/polymarket.db

# Redis Configuration (optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_MS=15000
MAX_HISTORICAL_DATA_POINTS=10000
MAX_RING_BUFFER_SIZE=1000
GC_THRESHOLD_MB=512

# WebSocket Configuration  
MAX_WEBSOCKET_CONNECTIONS=50
WEBSOCKET_HEARTBEAT_INTERVAL_MS=30000
WEBSOCKET_RECONNECT_DELAY_MS=5000
MESSAGE_QUEUE_SIZE=1000

# Database Performance
CONNECTION_POOL_SIZE=5
QUERY_TIMEOUT_MS=30000
BATCH_SIZE=100
VACUUM_INTERVAL_MS=86400000

# Environment
NODE_ENV=production
ENABLE_DEBUG_MODE=false
ENABLE_PERFORMANCE_MODE=true

# Feature Flags
ENABLE_CROSS_MARKET_DETECTION=true
ENABLE_MICROSTRUCTURE_ANALYSIS=true  
ENABLE_STATISTICAL_MODELS=true
ENABLE_BACKTESTING=false
ENABLE_WEB_DASHBOARD=false

# Health Monitoring
HEALTH_CHECK_INTERVAL_MS=30000
METRICS_COLLECTION_INTERVAL_MS=60000
ERROR_THRESHOLD_COUNT=10
ERROR_WINDOW_MS=300000
