{
  "detection": {
    "marketFiltering": {
      "enabled": true,
      "maxDaysToResolution": 90,
      "minDaysToResolution": 1,
      "trendBasedPatterns": [
        "hit \\$\\d+.*202[5-9]",
        "reach \\$\\d+.*202[5-9]",
        "above \\$\\d+.*202[5-9]",
        "below \\$\\d+.*202[5-9]",
        "price.*\\$\\d+.*202[5-9]",
        "hit \\$\\d+.*by end of",
        "reach \\$\\d+.*by end of",
        "will .* ever",
        "by 203[0-9]",
        "by the end of 202[5-9]",
        "before 202[6-9]"
      ],
      "eventBasedKeywords": [
        "earnings",
        "beat earnings",
        "miss earnings",
        "Q[1-4] earnings",
        "win election",
        "primary",
        "caucus",
        "indicted",
        "convicted",
        "sentenced",
        "arrested",
        "win game",
        "win championship",
        "playoff",
        "pass.*bill",
        "veto",
        "announce this",
        "release this",
        "this week",
        "this month",
        "next meeting",
        "impeach",
        "resign"
      ],
      "excludeTags": [
        "long-term",
        "price-prediction",
        "crypto-price",
        "yearly-forecast",
        "multi-year"
      ],
      "includeTags": [
        "earnings",
        "elections",
        "sports",
        "politics",
        "legal",
        "news",
        "current-events"
      ],
      "requireEventDate": true,
      "scoreThreshold": 0.6
    },
    "signals": {
      "volumeSpike": {
        "multiplier": 1.2,
        "windowMs": 180000,
        "minConfidence": 0.5
      },
      "priceMovement": {
        "percentageThreshold": 1.5,
        "timeWindowMs": 300000,
        "minVolume": 5000,
        "baselineExpectedChangePercent": 2
      },
      "crossMarketCorrelation": {
        "correlationThreshold": 0.5,
        "minMarkets": 2,
        "zScoreThreshold": 1.5
      },
      "activityDetection": {
        "baselineActivityScore": 40,
        "activityThreshold": 60
      }
    },
    "microstructure": {
      "orderbookImbalance": {
        "threshold": 0.15,
        "depth": 20,
        "minSpreadBps": 5
      },
      "liquidityVacuum": {
        "depthDropThreshold": 15,
        "spreadWidenThreshold": 1.5,
        "durationMs": 30000
      },
      "frontRunning": {
        "scoreThreshold": 0.5,
        "volumeWeightThreshold": 0.4,
        "spreadImpactThreshold": 1.2
      }
    },
    "statistical": {
      "anomalyDetection": {
        "zScoreThreshold": 1.5,
        "mahalanobisThreshold": 2,
        "isolationForestThreshold": 0.5,
        "lookbackPeriods": 72
      },
      "trendAnalysis": {
        "trendStrengthThreshold": 0.4,
        "volatilityThreshold": 0.6,
        "stabilityPeriods": 12
      }
    },
    "markets": {
      "minVolumeThreshold": 15000,
      "maxMarketsToTrack": 100,
      "refreshIntervalMs": 30000,
      "inactivityTimeoutMs": 3600000
    },
    "alerts": {
      "discordRateLimit": 10,
      "confidenceThresholds": {
        "info": 0.6,
        "warning": 0.75,
        "critical": 0.9
      },
      "severityLevels": {
        "low": [
          "volume_spike",
          "price_movement"
        ],
        "medium": [
          "orderbook_imbalance",
          "liquidity_vacuum"
        ],
        "high": [
          "front_running",
          "cross_market_correlation"
        ],
        "critical": [
          "coordinated_cross_market",
          "statistical_anomaly"
        ]
      }
    }
  },
  "performance": {
    "processing": {
      "maxConcurrentRequests": 10,
      "requestTimeoutMs": 15000,
      "retryAttempts": 3,
      "backoffMultiplier": 2
    },
    "memory": {
      "maxHistoricalDataPoints": 10000,
      "cleanupIntervalMs": 300000,
      "maxRingBufferSize": 1000,
      "gcThresholdMb": 512
    },
    "database": {
      "connectionPoolSize": 5,
      "queryTimeoutMs": 30000,
      "batchSize": 100,
      "vacuumIntervalMs": 86400000
    },
    "websocket": {
      "maxConnections": 50,
      "heartbeatIntervalMs": 30000,
      "reconnectDelayMs": 5000,
      "messageQueueSize": 1000
    }
  },
  "environment": {
    "logLevel": "info",
    "isDevelopment": false,
    "enableDebugMode": false,
    "enablePerformanceMode": true
  },
  "features": {
    "enableCrossMarketDetection": true,
    "enableMicrostructureAnalysis": true,
    "enableStatisticalModels": true,
    "enableBacktesting": false,
    "enableWebDashboard": true
  }
}